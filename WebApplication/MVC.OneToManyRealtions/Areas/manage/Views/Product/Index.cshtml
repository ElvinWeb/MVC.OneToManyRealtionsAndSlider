
@model List<Product>;
@{
    int counter = 0;
    string currency = "azn";
    string percentage = "%";
}
<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between">
        <h1>Products Datas</h1>
        <a class="btn btn-primary" style="width:100px;" asp-action="Create" asp-controller="Product">Add</a>
    </div>

    <table class="table table-hover table-striped mt-3 shadow">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Code</th>
                <th scope="col">Tax</th>
                <th scope="col">CostPrice</th>
                <th scope="col">SalePrice</th>
                <th scope="col">DiscountPercentage</th>
                <th scope="col">Availablity</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@product.Name</td>
                    <td>@product.Desc</td>
                    <td>@product.Code</td>
                    <td>@product.Tax @currency</td>
                    <td>@product.CostPrice @currency</td>
                    <td>@product.SalePrice @currency</td>
                    <td>@product.DiscountPercent @percentage</td>
                    <td>@product.IsAvailable</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Product" asp-route-id="@product.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>